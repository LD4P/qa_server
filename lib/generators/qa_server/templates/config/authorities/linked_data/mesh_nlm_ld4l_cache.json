        {
          "@type": "IriTemplateMapping",
          "variable": "query",
          "property": "hydra:freetextQuery",
          "required": true,
          "encode": true
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "entity",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": ""
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "maxRecords",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "20"
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "startRecord",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "1"
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "lang",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "en"
        }
      ]
    },
    "qa_replacement_patterns": {
      "query":   "query",
      "subauth": "entity",
      "start_record": "startRecord",
      "requested_records": "maxRecords"
